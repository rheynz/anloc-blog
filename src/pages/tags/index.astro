---
import MainLayout from "../../layouts/MainLayout.astro";
import { getAllTags } from "../../services/posts";

const tags = await getAllTags();
---

<MainLayout title="All Tags">
  <main class="container mx-auto px-4 py-8">
    <h1 class="text-3xl font-bold mb-6">All Tags</h1>
    <div class="flex flex-wrap gap-4">
      {
        tags.map((tag) => (
          <a
            href={`/tags/${tag}`}
            class="inline-block bg-gray-200 rounded-full px-4 py-2 text-lg font-semibold text-gray-700 hover:bg-gray-300"
          >
            #{tag}
          </a>
        ))
      }
    </div>
  </main>
</MainLayout>
