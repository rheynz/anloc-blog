---
import MainLayout from "../layouts/MainLayout.astro";
import { getRecentPosts } from "../services/posts";
import PostPreview from "../components/PostPreview.astro";

const recentPosts = await getRecentPosts(3); // Menampilkan 3 post terbaru
---

<MainLayout title="Home">
  <main class="container mx-auto px-4 py-8">
    <div class="text-center py-16">
      <h1 class="text-4xl font-bold text-gray-800">Welcome to MyBlog</h1>
      <p class="text-lg text-gray-600 mt-4">A simple blog built with Astro.</p>
    </div>

    <div class="mt-8">
      <h2 class="text-2xl font-bold text-gray-800 mb-4">Recent Posts</h2>
      <div class="space-y-4">
        {recentPosts.map((post) => <PostPreview post={post} />)}
      </div>
      <div class="text-center mt-8">
        <a
          href="/blog"
          class="inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700"
        >
          View All Posts
        </a>
      </div>
    </div>
  </main>
</MainLayout>
