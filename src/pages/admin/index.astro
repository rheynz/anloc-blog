---
import AdminLayout from "../../layouts/AdminLayout.astro";
import { getPosts } from "../../services/posts";
import FormattedDate from "../../components/FormattedDate.astro";

const posts = await getPosts();
---

<AdminLayout title="Admin Dashboard">
  <main class="container mx-auto px-4 py-8">
    <div class="flex justify-between items-center mb-6">
      <h1 class="text-3xl font-bold">Admin Dashboard</h1>
      <a
        href="/admin/editor"
        class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500"
      >
        Create New Post
      </a>
    </div>

    <div class="bg-white shadow overflow-hidden sm:rounded-md">
      <ul role="list" class="divide-y divide-gray-200">
        {
          posts.map((post) => (
            <li>
              <div class="px-4 py-4 sm:px-6 flex items-center justify-between">
                <div>
                  <p class="text-sm font-medium text-indigo-600 truncate">
                    {post.title}
                  </p>
                  <div class="text-xs text-gray-500">
                    <FormattedDate date={new Date(post.publishedAt)} />
                  </div>
                </div>
                <div class="ml-2 flex-shrink-0 flex items-center gap-4">
                  <a
                    href={`/posts/${post.slug}`}
                    target="_blank"
                    class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-blue-100 text-blue-800 hover:bg-blue-200"
                    title="View Post"
                  >
                    View
                  </a>
                  <a
                    href={`/admin/editor?id=${post.id}`}
                    class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800 hover:bg-green-200"
                    title="Edit Post"
                  >
                    Edit
                  </a>
                </div>
              </div>
            </li>
          ))
        }
      </ul>
    </div>
  </main>
</AdminLayout>
