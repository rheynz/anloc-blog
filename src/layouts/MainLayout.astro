---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

export interface Props {
	title: string;
	description?: string;
}

const { title, description = 'A simple blog built with Astro.' } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="alternate" type="application/rss+xml" title="MyBlog RSS Feed" href="/rss.xml" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<script src="https://cdn.tailwindcss.com" defer></script>
	</head>
	<body class="bg-gray-50 flex flex-col min-h-screen">
		<Header />
		<main class="flex-grow container max-w-4xl mx-auto px-4 py-8">
			<slot />
		</main>
		<Footer />
	</body>
</html>

<style is:global>
:root { --bg:#f9fafb; --text:#111827; --muted:#6b7280; --accent:#4f46e5; --card:#ffffff; --border:#e6e6e6; }
html,body { margin:0; padding:0; font-family: system-ui, -apple-system, "Segoe UI", Roboto, "Helvetica Neue", Arial; color:var(--text); background:var(--bg); }
header { background:var(--card); border-bottom:1px solid var(--border); position:sticky; top:0; z-index:50; }
header .nav { max-width:1100px; margin:0 auto; padding:0.75rem 1rem; display:flex; align-items:center; justify-content:space-between; }
header .brand { font-weight:700; color:var(--accent); text-decoration:none; font-size:1.25rem; }
header .nav-links { display:flex; gap:1rem; align-items:center; }
header .nav-links a { color:#374151; text-decoration:none; font-weight:600; }
.container { max-width:1100px; margin:0 auto; padding:0 1rem; }
main { padding-top:1rem; padding-bottom:2rem; }
.post-card { background:var(--card); border:1px solid var(--border); border-radius:8px; padding:1rem; margin-bottom:1rem; }
.post-title { color:var(--accent); font-weight:700; text-decoration:none; display:block; margin-bottom:0.25rem; }
.post-excerpt { color:var(--muted); margin-bottom:0.5rem; }
footer { background:#0f1724; color:#d1d5db; padding:2rem 1rem; }
footer .footer-inner { max-width:1100px; margin:0 auto; display:flex; align-items:center; justify-content:space-between; gap:1rem; flex-wrap:wrap; }
.prose { max-width:760px; margin:0 auto; padding:1rem 0; color:#374151; }
.prose h1, .prose h2, .prose h3 { margin-top:1.25rem; margin-bottom:0.75rem; font-weight:700; }
.prose p { margin-bottom:1rem; line-height:1.65; color:#374151; }
.prose a { color:var(--accent); text-decoration:underline; }
@media (min-width:768px) { main { padding:2rem 1.5rem; } }
</style>
