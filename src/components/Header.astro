---
const isAuthenticated = Astro.cookies.has("auth-secret");
---

<header class="bg-white shadow">
  <nav class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-16">
      <div class="flex-shrink-0">
        <a href="/" class="text-xl font-bold text-indigo-600">MyBlog</a>
      </div>
      <div class="flex items-center space-x-4">
        <a href="/" class="text-gray-500 hover:text-gray-700">Home</a>
        <a href="/blog" class="text-gray-500 hover:text-gray-700">Blog</a>
        <a href="/tags" class="text-gray-500 hover:text-gray-700">Tags</a>
        {
          isAuthenticated ? (
            <a href="/api/logout" class="text-gray-500 hover:text-gray-700">
              Logout
            </a>
          ) : (
            <a href="/admin" class="text-gray-500 hover:text-gray-700">
              Admin
            </a>
          )
        }
      </div>
    </div>
  </nav>
</header>
