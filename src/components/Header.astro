---
const isAuthenticated = Astro.cookies.has("auth-secret");
---

<header>
  <nav class="nav" role="navigation" aria-label="Main navigation">
    <a href="/" class="brand">MyBlog</a>
    <div class="nav-links" role="menubar">
      <a href="/" role="menuitem">Home</a>
      <a href="/blog" role="menuitem">Blog</a>
      <a href="/tags" role="menuitem">Tags</a>
      {isAuthenticated ? (
        <a href="/api/logout" role="menuitem">
          Logout
        </a>
      ) : (
        <a href="/admin" role="menuitem">
          Admin
        </a>
      )}
    </div>
  </nav>
</header>
